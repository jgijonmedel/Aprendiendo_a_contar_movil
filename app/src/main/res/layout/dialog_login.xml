<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_330sdp"
    android:background="@drawable/bg_dialog">

    <ImageView
        android:id="@+id/img_perfil_elegida"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/ic_perfil_vacio"
        app:layout_constraintBottom_toTopOf="@+id/et_nom_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/et_nom_usuario"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_33sdp"
        android:layout_marginHorizontal="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:inputType="text"
        android:background="@drawable/bg_edit_text"
        android:paddingHorizontal="@dimen/_15sdp"
        android:singleLine="true"
        android:hint="Nombre"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_perfil_two"
        app:layout_constraintTop_toBottomOf="@id/img_perfil_elegida" />

    <ImageView
        android:id="@+id/btn_perfil_one"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/ic_perfil_one"
        app:layout_constraintBottom_toBottomOf="@+id/btn_perfil_two"
        app:layout_constraintEnd_toStartOf="@id/btn_perfil_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_perfil_two" />

    <ImageView
        android:id="@+id/btn_perfil_two"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/ic_perfil_two"
        app:layout_constraintBottom_toTopOf="@+id/btn_list"
        app:layout_constraintEnd_toStartOf="@id/btn_perfil_three"
        app:layout_constraintStart_toEndOf="@+id/btn_perfil_one"
        app:layout_constraintTop_toBottomOf="@+id/et_nom_usuario" />

    <ImageView
        android:id="@+id/btn_perfil_three"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/ic_perfil_three"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btn_list"
        app:layout_constraintEnd_toStartOf="@+id/btn_perfil_four"
        app:layout_constraintStart_toEndOf="@+id/btn_perfil_two"
        app:layout_constraintTop_toBottomOf="@+id/et_nom_usuario" />

    <ImageView
        android:id="@+id/btn_perfil_four"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:src="@drawable/ic_perfil_four"
        app:layout_constraintBottom_toBottomOf="@+id/btn_perfil_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_perfil_three"
        app:layout_constraintTop_toTopOf="@+id/btn_perfil_three" />

    <ImageButton
        android:id="@+id/btn_list"
        android:layout_width="@dimen/_83sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/ic_btn_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_perfil_three"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog">

    <ImageView
        android:id="@+id/img_perfil_elegida"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/ic_perfil_vacio"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toTopOf="@+id/et_nom_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nom_usuario"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_55sdp"
        android:hint="Nombre"
        android:background="@drawable/bg_edit_text"
        android:gravity="center"
        android:imeOptions="flagNoExtractUi"
        android:inputType="text"
        android:singleLine="true"
        android:paddingHorizontal="@dimen/_13sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_perfil_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintTop_toBottomOf="@id/img_perfil_elegida" />

    <ImageButton
        android:id="@+id/btn_perfil_one"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/ic_perfil_vacio"
        android:layout_marginStart="@dimen/_15sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_perfil_one"
        android:padding="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_perfil_two"
        app:layout_constraintEnd_toStartOf="@id/btn_perfil_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_perfil_two" />

    <ImageButton
        android:id="@+id/btn_perfil_two"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/ic_perfil_vacio"
        android:layout_marginTop="@dimen/_5sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_perfil_two"
        android:padding="@dimen/_4sdp"
        app:layout_constraintBottom_toTopOf="@+id/btn_list"
        app:layout_constraintEnd_toStartOf="@id/btn_perfil_three"
        app:layout_constraintStart_toEndOf="@+id/btn_perfil_one"
        app:layout_constraintTop_toBottomOf="@+id/et_nom_usuario" />

    <ImageButton
        android:id="@+id/btn_perfil_three"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/ic_perfil_vacio"
        android:padding="@dimen/_4sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_perfil_three"
        app:layout_constraintBottom_toTopOf="@+id/btn_list"
        app:layout_constraintEnd_toStartOf="@+id/btn_perfil_four"
        app:layout_constraintStart_toEndOf="@+id/btn_perfil_two"
        app:layout_constraintTop_toBottomOf="@+id/et_nom_usuario" />

    <ImageButton
        android:id="@+id/btn_perfil_four"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/ic_perfil_vacio"
        android:layout_marginEnd="@dimen/_15sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_perfil_four"
        android:padding="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_perfil_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_perfil_three"
        app:layout_constraintTop_toTopOf="@+id/btn_perfil_three" />

    <ImageButton
        android:id="@+id/btn_list"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/ic_btn_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_perfil_three" />

</androidx.constraintlayout.widget.ConstraintLayout>